<div class="records_div">
  <h2>All Records</h2>
</div>
<div class="container">
  <form action="/companies/get_data" class="form-inline form_search" method="get" accept-charset="utf-8" data-remote=true>
    <div class="form-group">
      <label>Company Name</label>
      <%= select_tag :company,
                       options_for_select(@company_names),
                       :name => "company[name]",
                       :class => "form-control",
                       :required => true
        %>
    </div>
    <div class="form-group">
      <input type="text" class="form-control" name='company[filter_text]' id="exampleInput2" placeholder="status/kind/invoice number/reporter" style="width: 300px;">
    </div>
    <button type="submit" class="btn btn-default">Search</button>
  </form>
</div>

<div class="records_container"></div>
